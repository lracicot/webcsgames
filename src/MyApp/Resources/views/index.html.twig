{% extends 'base.html.twig' %}

{% block body %}
<div class="page-header">
  <h1>Welcome to NewTube!</h1>
</div>
<form  class="login-form" action="{{ path('login_check') }}" method="post">
    {{ error }}
    <input type="text" name="_username" value="{{ last_username }}" />
    <input type="password" placeholder="User name" name="_password" value="" required />
    <input type="submit" placeholder="Password"  value="Log in" required />
</form>

<div class="row">
  <div class="col-md-7 col-sm-12">
    <h3>Not a member yet? Join the community!</h3>

 <form class="register-form" action="/register" method="post">
   <input type="text" placeholder="User name" name="uname" required> <br>
   <input type="text" placeholder="Password" name="pass" required> <br>
   <input type="text" placeholder="Biographie" name="bio" required> <br>
   <input type="submit" value="Register">
 </form>
</div>
</div>


{% endblock %}
